<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_height="70dp">
        <RelativeLayout
            android:id="@+id/release_relativelayout"
            android:layout_width="355dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical">

          <ImageView
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
             android:id="@+id/my_image"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/mmexport1668407944997"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/release_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/my_image"
                android:text="dxb"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/release_date"
                android:layout_marginTop="37dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/my_image"
                android:text="2000-03-25"
                android:textSize="14sp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/release_do"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/rests"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/release_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
     <TextView
         android:id="@+id/release_content"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="hhh"
         android:textColor="@color/black"
         android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/release_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核中"
            android:textColor="#FF5722"
            android:textSize="12sp"/>
     </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <LinearLayout
            android:id="@+id/release_share"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/release_share_image"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/share"/>
            <TextView
                android:id="@+id/release_share_text"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="分享"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/release_like"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/release_like_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"/>

         <TextView
             android:id="@+id/release_like_text"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/black"
             android:text="赞"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/release_collect"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/release_collect_image"
               android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/collect"/>
            <TextView
                android:id="@+id/release_collect_text"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="收藏"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>