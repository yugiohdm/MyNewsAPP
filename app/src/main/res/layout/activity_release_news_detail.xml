<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".conservator.ReleaseNewsDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape8">
        <ImageView
            android:id="@+id/goback_releasenews_detail_activity"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="用户发布的新闻详情"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户新闻ID:"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/releasenews_detail_nid"
                android:layout_marginLeft="5dp"
                android:cursorVisible="false"
                android:editable="false"
                android:textIsSelectable="false"
                android:background="@drawable/shape14"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户新闻标题:"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/releasenews_detail_title"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape14"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户新闻内容:"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/releasenews_detail_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape14"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户新闻图片:"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/releasenews_detail_imageurl"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape14"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户新闻所发布的时间:"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/releasenews_detail_date"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape14"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户新闻类型:"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/releasenews_detail_type"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape14"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户新闻状态:"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/releasenews_detail_state"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape14"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞数:"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/releasenews_detail_like"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape14"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布者ID:"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/releasenews_detail_uid"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape14"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <Button
            android:layout_marginTop="60dp"
            android:id="@+id/releasenews_detail_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"/>
    </LinearLayout>
</LinearLayout>