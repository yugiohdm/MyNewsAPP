<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="@drawable/shape10">
        <ImageView
            android:id="@+id/test_gobacck"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/left_arrow"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/test_search"
            android:layout_marginRight="40dp"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/search"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/test_rests"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/rests"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="WebViewLayout">
            <WebView
                android:id="@+id/desc_webview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </WebView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/test_collect"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/collect"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/test_share"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/share"/>
    </RelativeLayout>
</LinearLayout>